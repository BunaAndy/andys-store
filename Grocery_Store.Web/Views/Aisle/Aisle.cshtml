@model AisleViewModel
@{
    ViewData["Title"] = "Aisle " + Model.Aisle.AisleId;
}

    <h1 class="display-4">Aisle @Model.Aisle.AisleId</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Aisle.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aisle.Products[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aisle.Products[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Aisle.Products)
        {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.Name)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Amount)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Price)
            </th>
        </tr>
        }
    </tbody>
</table>